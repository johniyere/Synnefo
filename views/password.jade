//- Uses the layout.
extends layout

//- Uses the block part of the layout.
block content
  .row
    .col-md-4.col-md-offset-4
      h1 Change Password:
      +panel("Password", "primary")
        p.text-danger= message
        p Enter your old password and confirm your new password to proceed:
        form(method="post", action="/update_password")
          label Old Password:
          br
          input(type="password", class="form-control", name="oldpassword", placeholder="")
          br
          label New Password:
          br
          input(type="password", class="form-control", name="newpassword1", placeholder="")
          br
          label Confirm New Password:
          br
          input(type="password", class="form-control", name="newpassword2", placeholder="")
          br
          br
          input(class=["btn", "btn-default"], type="submit", value="Change!")
